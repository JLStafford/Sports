<div class="profile-forms">
  <form class="delete-user" action="/users/{{user.id}}/delete" method="POST">
    <input type="submit" name="delete" value="Delete">
  </form>
  <form class="logout-user" action="/users/{{user.id}}/logout" method="get">
    <input type="submit" name="logout" value="Logout">
  </form>
</div>

<div class="events">
  <form class="event-search" action="/search" method="GET">
    <input type="submit" name="search" value="Search For Events">
  </form>
  <form class="even-create" action="/newEvent" method="GET">
    <input type="submit" name="create" value="Create New Event">
  </form>
</div>

<div class="events-upcoming">
  {{#each events}}

      <div class="individual-event">
        <div class="event-title"><h3>{{@index}}: {{this.title}}</h3></div>
        <div class="event-date"><p>Date: {{@index}}: {{this.date}}</p></div>
        <div class="event-time"><p>Time: {{@index}}: {{this.time}}</p></div>
      </div>

  {{/each}}
</div>
<div class="events-past">
  {{#each events}}
    <div class="individual-event">
      <div class="event-title"><h3>{{@index}}: {{this.title}}</h3></div>
      <div class="event-date"><p>Date: {{@index}}: {{this.date}}</p></div>
    </div>
  {{/each}}
</div>
<div class="events-host">
  {{#each myEvents}}
    {{#if {{@index}}: {{this.host_id}} === ${userInfo.id}}
      <div class="individual-event">
        <div class="event-title"><h3>{{@index}}: {{this.title}}</h3></div>
        <div class="event-date"><p>Date: {{@index}}: {{this.date}}</p></div>
        <div class="event-time"><p>Time: {{@index}}: {{this.time}}</p></div>
      </div>
    {{/if}}
  {{/each}}
</div>
