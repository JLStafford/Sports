    <div class="container">
      <div class="grey lighten-3 rounded-box opacity-results center">
          <div id="past" class="col s12">
            <div class="events-past">
              <h3>Past Events</h3>
                {{#isPast events}}
                  <div class="individual-event"></div>
                {{/isPast}}
            </div>
          </div>


          <div id="hosted" class="col s12 ">
            <div class="events-host">
              <h3>My Hosted Events</h3>
                {{#each myEvents}}
                  <div class="individual-event">
                    <div class="event-title" name"title"><h3>{{this.title}}</h3></div>
                    <div class="event-date"><p>Date: {{this.date}}</p></div>
                    <div class="event-time"><p>Time: {{this.time}}</p></div>
                    <form class="edit" action="/events/{{this.id}}/edit" method="get">
                      <input class="btn light-green" type="submit" name="edit" value="edit event">
                    </form>
                  </div>
                {{/each}}
                <div class="spacer">

                </div>
              </div>
            </div>


            <div id="test4" class="col s12">
              <h3>Upcoming Events</h3>
                {{#isFuture events}}
                  <div class="individual-event"></div>
                  {{/isFuture}}
            </div>

        </div>
      </div>
      <div class="spacer"></div>



</div>
