<div class="row">
  <div class="col s12">
    <ul class="tabs">
      <li class="tab col s3"><a class="active" href="type-search">Search by sport</a></li>
      <li class="tab col s3"><a href="date-search">Search by date</a></li>
    </ul>
  </div>
  <div id="type-search" class="col s12">
    <form class="type-form" action="/results/type" method="POST">
      <input type="text" name="type" placeholder="What sport do you want to play?">
      <input type="submit" name="typesubmit" value="Search by Sport">
    </form>
  </div>
  <div id="date-search" class="col s12">
    <form class="date-form" action="/results/date" method="POST">
      <label for="search-date">Enter a date</label>
      <input type="date" id="search-date" name="date">
      <input type="submit" name="datesubmit" value="Search by Date">
    </form>
  </div>
  <div id="all-search" class="col s12">
    <form class="all-events-form" action="/results/all" method="POST">
      <input type="submit" name="allsubmit" value="Search All">
    </form>
  </div>
</div>
